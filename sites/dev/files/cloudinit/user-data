#  vim:ts=2:sw=2:et
#

resolv_conf:
  nameservers: [ '8.8.8.8', '8.8.4.4' ]
  searchdomains:
    - dev.example.com
  domain: dev.example.com
  options:
    rotate: true
    timeout: 1

ssh_authorized_keys:
  - ssh-rsa  imported-openssh-key
  - ssh-rsa  vagrant

write_files:
  - path: /etc/itwork
    permissions: 0444
    owner: root
    content: |
      HELLO
  - path: /etc/coreos.environment
    permissions: 0444
    owner: root
    content: |
      DC: dev
      DEFAULT_ENVIRONMENT=prod
      DEFAULT_APP=unknown
      DEFAULT_NAME=unknown

coreos:
  units:
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target


