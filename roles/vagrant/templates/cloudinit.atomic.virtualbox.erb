#!/bin/bash
cat <<-EOF >/var/lib/coreos-vagrant/vagrantfile-user-data
#cloud-config
#
#   Author: Rohith (gambol99@gmail.com)
#   Date: 2014-10-16 10:24:42 +0100 (Thu, 16 Oct 2014)
#
#  vim:ts=2:sw=2:et
#
hostname: <%= @hostname %>.<%= @domain %>

ssh_authorized_keys:
  - ssh-rsa  imported-openssh-key
  - ssh-rsa  vagrant
  - ssh-rsa  vagrant

resolv_conf:
  nameservers: [ '8.8.8.8', '8.8.4.4' ]
  searchdomains:
    - <%= @domain %>
  domain: <%= @domain %>
  options:
    rotate: true
    timeout: 1

write_files:
  - path: /etc/hosts
    permissions: 0444
    owner: root
    content: |
      <%- boxes.each_pair do |hostname, config| -%>
      <%= config['virtualbox']['ip'] %> <%= hostname %>	
      <%- end -%>
  - path: /etc/coreos.environment
    permissions: 0444
    owner: root
    content: |
      DC: sbx
      DEFAULT_ENVIRONMENT=sbx
      DEFAULT_APP=unknown
      DEFAULT_NAME=unknown
  
coreos:
  etcd:
    addr: \$private_ipv4:4001
    peer-addr: \$private_ipv4:7001
    <%- if @discovery -%> 
    discovery: <%= @discovery %>
    <%- else -%>
    peers: master101.<%= @domain %>
    <%- end -%>
  fleet:
    public-ip: \$private_ipv4
    metadata: public_ip=\$private_ipv4,location=sbx,role=kubernetes,minion=true,master=true,host=<%= @hostname.gsub(/[0-9]*/,'') %>,<%= @fleet.map { |k,v| "#{k}=#{v}" }.join(',') %>
  units:
    [Unit]
      Description=Install Bastion Container
      Documentation=https://github.com/GoogleCloudPlatform/kubernetes
      Requires=fleet.service 
      After=fleet.service 

      [Service]
      Restart=on-failure
      RestartSec=5
      TimeoutStartSec=0
      ExecStartPre=-/usr/bin/docker kill bastion
      ExecStartPre=-/usr/bin/docker rm bastion
      ExecStartPre=/usr/bin/docker pull gambol99/bastion
      ExecStart=/usr/bin/docker run \
        --name bastion \
        --pid=host --net=host --ipc=host \
        -v /config:/config \
        -v /var/run/docker.sock:/var/run/docker.sock \
        -v /var/run/fleet.sock:/var/run/fleet.sock \
        -v /var/run/dbus:/var/run/dbus \
        -v /run/systemd:/run/systemd \
        -v /usr/bin/fleetctl:/usr/bin/fleetctl \
        -v /usr/bin/docker:/var/bin/docker \
        -v /etc/systemd/system:/etc/systemd/system \
        -v /:/host \
        gambol99/bastion

      [Install]
      WantedBy=multi-user.target

      [X-Fleet]
      Global=true
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
    - name: settimezone.service
      command: start
      content: |
        [Unit]
        Description=Set the timezone

        [Service]
        ExecStart=/usr/bin/timedatectl set-timezone UTC
        RemainAfterExit=yes
        Type=oneshot
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
EOF
