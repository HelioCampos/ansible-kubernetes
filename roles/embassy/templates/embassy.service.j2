[Unit]
Description=Embassy Proxy Service
After=docker.service
Requires=docker.service

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=0
Restart=on-failure
RestartSec=5
ExecStartPre=-/usr/bin/docker kill embassy
ExecStartPre=-/usr/bin/docker rm embassy
ExecStartPre=/usr/bin/docker pull {{ embassy_image }}:{{ embassy_image_tag }}
ExecStart=/usr/bin/docker run \
  --privileged=true \
  --net=host \
  --name embassy \
  -e SERVICE_NAME=embassy \
  -e PROXY_IP={{ embassy_proxy_ip }} \
  -v /var/run/docker.sock:/var/run/docker.sock \
  {{ embassy_image }}:{{ embassy_image_tag }} \
  --dnat -v={{ embassy_verbosity }} -interface={{ iface }} \
  -discovery={{ embassy_provider }} \
  -provider=docker

ExecStop=/usr/bin/docker stop embassy

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
