hostname: {{ inventory_hostname }}

ssh_authorized_keys:
  - ssh-rsa  imported-openssh-key
  - ssh-rsa  vagrant

write_files:
  - path: /etc/environment
    permissions: 0444
    owner: root
    content: |
      PRIVATE_IP={{ ansible_default_ipv4.address }}
      PRIMARY_INTERFACE={{ ansible_default_ipv4.alias }}
      COREOS_PRIVATE_IPV4={{ ansible_default_ipv4.address }}

coreos:
  etcd:
    addr: {{ ansible_default_ipv4.address }}:4001
    peer-addr: {{ ansible_default_ipv4.address }}:7001
    discovery: {{ discovery_service }}/{{ discovery_token }}
  fleet:
    public-ip: {{ ansible_default_ipv4.address }}
    metadata: role=kubernetes,environment={{ location }},hostname={{ ansible_hostname }}
  units:
  - name: etcd.service
    command: start
  - name: fleet.service
    enable: true
    command: start
  - name: docker-tcp.socket
    command: start
    enable: true
    content: |
      [Unit]
      Description=Docker Socket for the API

      [Socket]
      ListenStream=2375
      Service=docker.service
      BindIPv6Only=both

      [Install]
      WantedBy=sockets.target
  - name: install-kubernetes.service
    command: start
    content: |
      [Unit]
      Description=Install kubernetes binaries

      [Service]
      Type=oneshot
      RemainAfterExit=yes
      TimeoutStartSec=300
      ExecStart=/usr/bin/mkdir -p /opt/kubernetes-{{ kubernetes_version }}/bin
      ExecStart=/usr/bin/mkdir -p /opt/kubernetes/bin
      ExecStart=/usr/bin/wget -q {{ kubernetes_release }}/hyperkube -O /opt/kubernetes-{{ kubernetes_version }}/bin/hyperkube
      ExecStart=/usr/bin/wget -q {{ kubernetes_release }}/kubectl -O /opt/kubernetes-{{ kubernetes_version }}/bin/kubectl
      ExecStart=/usr/bin/chmod +x /opt/kubernetes-{{ kubernetes_version }}/bin/hyperkube /opt/kubernetes-{{ kubernetes_version }}/bin/kubectl
      ExecStart=/bin/ln -s /opt/kubernetes-{{ kubernetes_version }}/bin/hyperkube /opt/kubernetes/bin/hyperkube
      ExecStart=/bin/ln -s /opt/kubernetes-{{ kubernetes_version }}/bin/kubelet /opt/kubernetes/bin/kubectl

   