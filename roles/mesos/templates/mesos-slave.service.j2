[Unit]
Description=Mesos Slave
After=docker.service
Requires=docker.service

[Service]
Restart=on-failure
RestartSec=20
TimeoutStartSec=30m
ExecStartPre=-/usr/bin/docker kill slave
ExecStartPre=-/usr/bin/docker rm slave
ExecStartPre=/usr/bin/docker pull {{ mesos_slave_image }}:{{ mesos_slave_image_tag }}
ExecStart=/usr/bin/docker run \
  --name=slave \
  --net=host \
  --privileged \
  -e SERVICE_NAME=meso-slave \
  -v /sys:/sys \
  -v /config/mesos/slave:/etc/mesos-slave \
  -v /usr/bin/docker:/usr/bin/docker:ro \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v /lib64/libdevmapper.so.1.02:/lib/libdevmapper.so.1.02:ro \
 {{ mesos_slave_image }}:{{ mesos_slave_image_tag }} \
  --hostname={{ public_ip }} \
  --ip={{ public_ip }} \
  --containerizers=docker \
  --master=zk://{{ mesos_zookeeper_url }} \
  --work_dir=/var/lib/mesos/slave \
  --log_dir=/var/log/mesos/slave

ExecStop=/usr/bin/docker stop slave

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
